{
  "name": "ng-hybrid-app",
  "version": "0.0.1",
  "description": "A sample of Angular2 & Angular1 hybrid application",
  "contributors": [
    "Dmitriy Labuzov <dlabuzov@griddynamics.com>"
  ],
  "main": "index.js",
  "scripts": {
    "clean": "rm -f src/ng2/*.js src/ng2/*.js.map",
    "tsc": "./node_modules/.bin/tsc",
    "tsc:w": "./node_modules/.bin/tsc -w",
    "serve": "./node_modules/.bin/live-server --host=localhost --port=8080 .",
    "go": "concurrently \"npm run tsc:w\" \"npm run serve\" "
  },
  "dependencies": {
    "@angular/common": "^2.2.0",
    "@angular/compiler": "^2.2.0",
    "@angular/core": "^2.2.0",
    "@angular/forms": "^2.2.0",
    "@angular/http": "^2.2.0",
    "@angular/platform-browser": "^2.2.0",
    "@angular/platform-browser-dynamic": "^2.2.0",
    "@angular/upgrade": "^2.2.0",
    "core-js": "^2.4.1",
    "es6-shim": "0.35.0",
    "reflect-metadata": "0.1.3",
    "rxjs": "5.0.0-beta.12",
    "zone.js": "0.6.26"
  },
  "devDependencies": {
    "concurrently": "^3.1.0",
    "live-server": "0.9.0",
    "systemjs": "^0.19.41",
    "ts-helpers": "1.1.2",
    "tslint": "3.7.4",
    "typescript": "^2.0.0",
    "typings": "^0.8.1"
  }
}
